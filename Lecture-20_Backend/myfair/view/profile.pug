extend base.pug
block content
  .profile-container
    .profile-block
        h2 User Page
        p
          img(src=`${user.profileImage}`, alt="", srcset="").profileImage
          input(type="file", name="photo").updateProfile
        p Name :#{user.name}
        p Email:#{user.email}
        p
          a(herf="/") Settings
        if user.role=="admin"
          p
            a(href="/managePlans" ) Manage Plans
          p 
            a(href="/manageUser") Manage User  
                  